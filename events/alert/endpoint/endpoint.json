{
  "name": "Endpoint Security Alert",
  "type": "endpoint_alert",
  "extends": "alert",
  "description": "Endpoint Security Alert events report detections and possible resolutions of threats, anomalies, and actions performed by security products running on endpoints.",
  "attributes": {
    "$include": "events/activity/endpoint/endpoint.json",
    "attacks": {
      "requirement": "optional"
    },
    "cvssv2": {
      "requirement": "optional"
    },
    "detection_uid": {
      "requirement": "optional"
    },
    "reason": {
      "requirement": "optional"
    },
    "scan_uid": {
      "requirement": "optional"
    },
    "threat": {
      "requirement": "required"
    },
    "threats": {
      "requirement": "optional"
    }
  }
}