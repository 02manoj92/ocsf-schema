{
  "name": "Email Alert",
  "type": "email_alert",
  "uid": 501,
  "extends": "alert",
  "description": "Email Alert events report the detections and resolutions of email malicious activity.",
  "attributes": {
    "connection_ref_uid": {
      "requirement": "optional"
    },
    "email": {
      "description": "The email that triggered the alert.",
      "requirement": "required"
    },
    "email_auth": {
      "requirement": "required"
    },
    "email_uid": {
      "requirement": "required"
    },
    "disposition_id": {
      "enum": {
        "1": {
          "name": "Allowed"
        },
        "2": {
          "name": "Blocked"
        },
        "3": {
          "name": "Isolated"
        },
        "4": {
          "name": "Quarantined"
        },
        "5": {
          "name": "Tagged"
        }
      }
    },
    "quarantine_uid": {
      "requirement": "optional"
    },
    "reason_id": {
      "requirement": "required"
    },
    "recipient_email": {
      "requirement": "optional"
    },
    "sender_hostname": {
      "requirement": "optional"
    },
    "sender_ip": {
      "requirement": "optional"
    },
    "threat": {
      "requirement": "required"
    }
  }
}