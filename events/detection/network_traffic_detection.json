{
  "name": "Network Traffic Detection",
  "uid": 512,
  "type": "network_traffic_detection",
  "extends": "detection",
  "description": "Network Traffic Detection events report the detection of threats in the network traffic data.",
  "attributes": {
    "connection": {
      "requirement": "optional"
    },
    "outcome_id": {
      "enum": {
        "1": {
          "name": "Allowed"
        },
        "2": {
          "name": "Blocked"
        },
        "3": {
          "name": "Dropped"
        },
        "4": {
          "name": "Deleted"
        },
        "5": {
          "name": "Isolated"
        }
      }
    },
    "rule": {
      "description": "The rule that triggered the network traffic detection event.",
      "requirement": "recommended"
    },
    "traffic": {
      "requirement": "required"
    },
    "threat": {
      "requirement": "required"
    }    
  }
}