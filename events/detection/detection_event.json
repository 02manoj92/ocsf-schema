{
  "name": "Detection Events",
  "type": "detection_event",
  "extends": "detection",
  "description": "Detection events report detections and possible resolutions of threats, anomalies, and actions performed by security products.",
  "attributes": {
    "actor_process": {
      "requirement": "required"
    },
    "attacks": {
      "requirement": "optional"
    },
    "content_ver": {
      "requirement": "optional"
    },
    "cvssv2": {
      "requirement": "optional"
    },
    "detection_uid": {
      "requirement": "optional"
    },
    "lineage": {
      "requirement": "optional"
    },
    "parent_process": {
      "requirement": "optional"
    },
    "reason": {
      "requirement": "optional"
    },
    "scan_uid": {
      "requirement": "optional"
    },
    "target": {
      "requirement": "recommended"
    },        
    "threat": {
      "requirement": "required"
    },
    "threats": {
      "requirement": "optional"
    }
  }
}