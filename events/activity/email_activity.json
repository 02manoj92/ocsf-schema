{
  "name": "Email Activity",
  "type": "email_activity",
  "uid": 403,
  "category": "activity",
  "extends": "event",
  "description": "Email Activity events report non-threatening email activity.",
  "attributes": {
    "connection_ref_uid": {
      "requirement": "optional"
    },
    "email": {
      "requirement": "required"
    },
    "email_auth": {
      "requirement": "recommended"
    },
    "email_uid": {
      "requirement": "recommended"
    },
    "disposition_id": {
      "enum": {
        "1": {
          "name": "Allowed"
        }
      }
    },
    "recipient_email": {
      "requirement": "optional"
    },
    "sender_ip": {
      "requirement": "optional"
    }
  }
}