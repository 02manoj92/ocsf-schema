{
  "name": "Network Trait",
  "description": "Network trait defines attributes shared by the network events.",
  "attributes": {
    "app_name": {
      "group": "context",
      "requirement": "optional"
    },
    "connection": {
      "group": "primary",
      "requirement": "recommended"
    },
    "dst": {
      "description": "The responder (server) in a network connection.",
      "requirement": "required",
      "group": "primary"
    },
    "proxy": {
      "group": "primary",
      "requirement": "optional"
    },
    "src": {
      "description": "The initiator (client) of the network connection.",
      "requirement": "required",
      "group": "primary"
    },
    "tls": {
      "group": "primary"
    },
    "traffic": {
      "group": "primary",
      "requirement": "optional"
    }
  }
}
