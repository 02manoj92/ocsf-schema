{
  "name": "Transport Layer Security",
  "type": "tls",
  "description": "The Transport Layer Security (TLS) object describes the TLS attributes of an email.",
  "attributes": {
    "cipher": {
      "requirement": "required"
    },
    "is_advertised": {
      "requirement": "required"
    },
    "is_used": {
      "requirement": "required"
    },
    "key_length": {
      "requirement": "recommended"
    },
    "tls_policy_id": {
      "requirement": "recommended",
      "enum": {
        "0": {
          "name": "Unknown"
        },
        "1": {
          "name": "None"
        },
        "2": {
          "name": "Enforced"
        },
        "3": {
          "name": "Opportunistic"
        }
      }
    },
    "version": {
      "name": "Version",
      "description": "The protocol version.",
      "requirement": "recommended"
    }
  }
}