{
  "caption": "Virtual Machine",
  "name": "virtual_machine",
  "description": "The virtual machine object.",
  "extends": "object",
  "attributes": {
    "$include": [
      "objects/device_hw_info.json"
    ],
    "autoscale_uid": {
      "requirement": "optional"
    },
    "customer_uid": {},
    "groups": {
      "caption": "Security Group",
      "description": "The network security groups assigned to a VM instance.",
      "requirement": "recommended"
    },
    "image": {
      "description": "The image used as a template to run the virtual machine.",
      "requirement": "recommended"
    },
    "name": {
      "description": "The virtual machine name.",
      "requirement": "recommended"
    },
    "region": {
      "description": "The region where the virtual machine is located. For example, an AWS Region.",
      "requirement": "recommended"
    },
    "subnet_uid": {
      "requirement": "recommended"
    },
    "type": {
      "description": "The virtual machine type.",
      "requirement": "recommended"
    },
    "uid": {
      "description": "The unique identifier of the cloud hosted virtual machine instance.",
      "requirement": "required"
    },
    "vpc_uid": {
      "requirement": "optional"
    }
  }
}
