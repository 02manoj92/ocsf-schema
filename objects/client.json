  "attributes": {
    "build": {
      "requirement": "optional"
    },
    "capabilities": {
      "requirement": "optional"
    },
    "desktop_display": {
      "requirement": "optional"
    },
    "hassh": {
      "description": "The clients HASSH fingerprint.",
      "requirement": "optional"
    },
    "keyboard_info": {
      "requirement": "optional"
    },
    "name": {
      "description": "The name of the client.",
      "requirement": "optional"
    },
    "product": {
      "requirement": "optional"
    },
    "protocol_ver": {
      "requirement": "recommended"
    },
    "remote_display": {
      "requirement": "optional"
    },
    "serial_number": {
      "description": "The serial number of the client.",
      "requirement": "optional"
    },
    "version": {
      "description": "The client software version.",
      "requirement": "optional"
    },
